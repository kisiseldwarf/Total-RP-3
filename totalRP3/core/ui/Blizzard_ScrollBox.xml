<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI-Classic.xsd">
	<Include file="Blizzard_ScrollBoxView.lua"/>
	<Include file="Blizzard_ScrollBoxLinearView.lua"/>
	<Include file="Blizzard_ScrollBoxGridView.lua"/>
	<Include file="Blizzard_ScrollBox.lua"/>

	<Frame name="TRP3_ScrollBoxBaseTemplate" clipChildren="true" mixin="TRP3_ScrollBoxBaseMixin" virtual="true">
		<KeyValues>
			<KeyValue key="canInterpolateScroll" value="true" type="boolean"/>
			<!--
			<KeyValue key="upperShadow" value="atlasName" type="string"/>
			<KeyValue key="lowerShadow" value="atlasName" type="string"/>
			-->
		</KeyValues>
		<Frames>
			<Frame parentKey="ScrollTarget" useParentLevel="true" inherits="TRP3_EventFrameTemplate">
				<Size x="1" y="1"/>
			</Frame>
			<Frame parentKey="Shadows" setAllPoints="true">
				<Layers>
					<Layer>
						<Texture parentKey="Lower" hidden="false"/>
						<Texture parentKey="Upper" hidden="false"/>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnSizeChanged method="OnSizeChanged"/>
			<OnMouseWheel method="OnMouseWheel"/>
		</Scripts>
	</Frame>
</Ui>
