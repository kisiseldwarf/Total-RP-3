<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI-Classic.xsd">
	<Include file="ScrollingHTML.lua"/>

	<Frame name="TRP3_ScrollingHTMLTemplate" mixin="TRP3_ScrollingHTMLMixin" virtual="true">
		<KeyValues>
			<KeyValue key="fontNameH1" value="GameFontNormalHuge3"/>
			<KeyValue key="fontNameH2" value="GameFontNormalHuge"/>
			<KeyValue key="fontNameH3" value="GameFontNormalLarge"/>
			<KeyValue key="fontName" value="GameFontNormal"/>
		</KeyValues>
		<Frames>
			<Frame parentKey="ScrollBox" setAllPoints="true" inherits="TRP3_WowScrollBox">
				<Frames>
					<SimpleHTML parentKey="SimpleHTML" inherits="TRP3_EventHTMLTemplate">
						<Size y="1"/>
						<Anchors>
							<Anchor point="TOPLEFT"/>
						</Anchors>
						<KeyValues>
							<KeyValue key="scrollable" value="true" type="boolean"/>
						</KeyValues>
					</SimpleHTML>
				</Frames>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnSizeChanged method="OnSizeChanged"/>
		</Scripts>
	</Frame>
</Ui>
